<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TitleEvent">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="button_login">

        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_login</item>
        <item name="android:typeface">sans</item>

    </style>
    <style name="edit_tlogin_custom">
        <item name="android:background">@drawable/edit_text_login_custom</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">#706f6f</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>




</resources>
