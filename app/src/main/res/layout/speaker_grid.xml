<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:id="@+id/speaker_image"
        android:layout_gravity="center_horizontal"
        android:background="#00e575"
        android:scaleType="centerCrop"
        android:src="@drawable/larry_page"
        />
    <TextView
        android:id="@+id/speaker_color"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:text=""
        android:textColor="@color/white"
        android:background="@color/image_trans"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hour start"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:id="@+id/hour_conference"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="17dp"
        android:layout_alignBottom="@+id/speaker_image"
        android:layout_alignLeft="@+id/conference_title"
        android:layout_alignStart="@+id/conference_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Conference Emprendedor"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:id="@+id/conference_title"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="17dp"
        android:layout_above="@+id/hour_conference"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>